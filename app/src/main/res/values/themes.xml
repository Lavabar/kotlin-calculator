<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="DigitButton">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/shape_digit_button</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="fontFamily">@font/opensans_medium</item>
    </style>
    <style name="OperationButton">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/shape_oper_button</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="fontFamily">@font/opensans_medium</item>
    </style>
    <style name="FunctionButton">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/shape_fun_button</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="fontFamily">@font/opensans_medium</item>
    </style>
    <style name="CalcViewField">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">65sp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="fontFamily">@font/opensans_light</item>
    </style>
</resources>